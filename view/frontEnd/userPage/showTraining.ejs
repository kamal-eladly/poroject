<%- include("../include/head.ejs") %> <%- include("../include/navebar.ejs") %>
<%- include("../include/notification.ejs") %>

<div class="services">
  <div class="container">
    <h1 class="text-center">
      تدريب <br /><span style="color: #ccc;font-size:33px">( <%= showTraining.title %> )</span>
    </h1>
    <div class="row">
      <div class="col-md-6">
        <div class="box box1">
          <ul>
            <% showTraining.content.split(",").forEach((element , i) => { %>
            <li><%= i + " - " + element%></li>
            <% }) %>
          </ul>
        </div>
      </div>
      <div class="col-md-6 box2">
        <div class="box">
            <img style="width:100%;height:304px;margin-bottom:20px;border-radius:15px" src="/backEnd/assets/img/trainingImage/<%= showTraining.image.split("--")[0] %>" alt="">
          <% if (showTraining.video) { %>
          <video style="width:100%;height:304px" controls src="/backEnd/assets/img/trainingImage/<%= showTraining.video.split("--")[0] %>"></video>

          <% } else { %>
            <div class="alert alert-danger">
                هذا التمرين لايمتلك اي فيديو
            </div>
        <%  } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../include/footer.ejs") %> <%-
include("../include/footerScript.ejs") %>
<script src="/frontEnd/assets/js/main.js"></script>
